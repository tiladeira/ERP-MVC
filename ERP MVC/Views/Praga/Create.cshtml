@model ERP_MVC.Praga

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Incluir Praga</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Praga</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.IdPraga)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.IdPraga)
            @Html.ValidationMessageFor(model => model.IdPraga)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.IdTipoPraga, "TipoPraga")
        </div>
        <div class="editor-field">
            @Html.DropDownList("IdTipoPraga", String.Empty)
            @Html.ValidationMessageFor(model => model.IdTipoPraga)
        </div>


        <div class="editor-label">
            @Html.LabelFor(model => model.NomePraga)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.NomePraga)
            @Html.ValidationMessageFor(model => model.NomePraga)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.ImgPraga)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.ImgPraga)
            @Html.ValidationMessageFor(model => model.ImgPraga)
        </div>

        <p>
            <input type="submit" value="Create" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Voltar", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
